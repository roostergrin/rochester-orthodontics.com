.form
  transition(name='fade-in')
    .form__thank-you(v-if='formSuccess && formSubmitted') Thank you for Contacting Us!
  transition(name='fade-in')
    .form__sending-overlay(v-if='!formSuccess && formSubmitted')
      .form__sending Sending
        span .
        span .
        span .
        
  form.form__form(@submit.prevent='validate', method='post', v-if='!formSubmitted')
    
    .form__group
      input.form__input(name='fullName', v-model='fullName', v-validate="'required|alpha_spaces'", :class="{ 'form__input--error': errors.has('fullName') }", type='text')
      label.form__label Name
      .form__message
          span(v-show="errors.has('fullname')") Your name is required.
    
    .form__group
      input.form__input(name='clientEmail', v-model='clientEmail', v-validate="'required|email'", :class="{ 'input': true, 'form__input--error': errors.has('clientEmail') }")
      label.form__label Email
      .form__message
        span(v-show="errors.has('clientEmail')") Please Input a Valid Email
    
    .form__group.form__group--alt
      input.form__input(name='clientPhone', v-model='clientPhone', v-validate="'required|numeric'", :class="{ 'input': true, 'form__input--error': errors.has('clientPhone') }")
      label.form__label Phone
      .form__message
        span(v-show="errors.has('clientPhone')") Please Input a Valid Phone Number
        
    .form__button-group
      .form__submit-button.active(@click='validate')
        span Submit
